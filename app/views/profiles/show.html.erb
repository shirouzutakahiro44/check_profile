
<% content_for(:title, t('.title')) %>
<div class="conteiner pt-3">
  <div class= "row" >
    <div class= "col-md-10 offset-md-1 mb-5">
      <h1 class= "float-left"><%= t('.title') %></h1>
      <%= link_to "Edit Profile", edit_profile_path, class: 'btn btn-success float-right' %>
    </div>
    <div class= "col-md-10 offset-md-1">
      <table class= "table">
        <tbody>
          <tr>
            <th>
              <span>メールアドレス</span>
            </th>
            <td><%= current_user.email %></td>
          </tr>
          <tr>
            <th>
              <span>氏名</span>
            </th>
            <td><%= current_user.decorate.full_name %></td>
          <tr>
            <th>
              <span>アイコン</span>
            </th>
              <td><%= image_tag current_user.avatar.thumb.url, size:'50x50', class: 'rounded-circle'  %></td>
          </tr>
        </tbody>

    </div>